<!--
  Theme: Material Strawberry
  Author: mluizvitor
-->

<theme>
  <formatVersion>7</formatVersion>

  <variables>
    <backgroundColor>F8EFFF</backgroundColor>
    <primaryColor>A56DE2</primaryColor>
    <secondaryColor>3B393D</secondaryColor>
    <sectionColor>452981</sectionColor>
  </variables>

  <view name="system, basic, detailed">
    <helpsystem name="help">
      <textColor>${secondaryColor}</textColor>
      <iconColor>${primaryColor}</iconColor>
    </helpsystem>
  </view>

  <view name="basic, detailed">
    <text name="system_name">
      <color>${secondaryColor}</color>
    </text>

    <image name="background">
      <color>${backgroundColor}</color>
    </image>

    <textlist name="gamelist">
      <selectedColor>${backgroundColor}ff</selectedColor>
      <primaryColor>${secondaryColor}ff</primaryColor>
      <secondaryColor>${secondaryColor}ff</secondaryColor>
      <selectorColor>${primaryColor}ff</selectorColor>
    </textlist>

    <rating name="md_rating">
      <color>${primaryColor}</color>
    </rating>
  </view>

  <view name="menu">
    <menuText name="menutext">
      <color>${secondaryColor}ff</color>
      <selectedColor>${backgroundColor}ff</selectedColor>
      <selectorColor>${primaryColor}ff</selectorColor>
      <separatorColor>${secondaryColor}1f</separatorColor>
    </menuText>

    <menuTextSmall name="menutextsmall">
      <color>${sectionColor}</color>
    </menuTextSmall>

    <menuBackground name="menubg">
      <color>${backgroundColor}</color>
    </menuBackground>

    <menuText name="menufooter">
      <color>${secondaryColor}cc</color>
    </menuText>

    <menuText name="menutitle">
      <color>${secondaryColor}</color>
    </menuText>
  </view>

  <view name="system">
    <!-- System Name -->
    <text name="systemName" extra="true">
      <color>${secondaryColor}</color>
    </text>

    <!-- Total games per system -->
    <text name="systemInfo">
      <color>${secondaryColor}cc</color>
    </text>

    <!-- System Background -->
    <image name="cover_fallback" extra="true">
      <color>${backgroundColor}</color>
    </image>

    <!-- System Background -->
    <image name="carouselFrame" extra="true">
      <color>${backgroundColor}</color>
    </image>
  </view>
</theme>
