<!--
  Theme: Elementerial
  Author: mluizvitor
-->

<theme>
  <formatVersion>7</formatVersion>

  <!--Configurações de ajuda-->
  <view name="system, basic, detailed, grid">
    <helpsystem name="help">
      <textColor>${backgroundLightColor}</textColor>
      <iconColor>${mainColor}</iconColor>
    </helpsystem>
  </view>

  <!--Configurações de cores nas listas de jogos-->
  <view name="basic, detailed, grid">
    <text name="system_name, md_name">
      <color>${backgroundLightColor}</color>
    </text>

    <image name="background">
      <color>${backgroundDarkColor}</color>
    </image>

    <image name="cover_list_fallback" extra="true">
      <color>${backgroundDarkColor}</color>
    </image>

    <textlist name="gamelist">
      <selectedColor>${onMainColor}</selectedColor>
      <selectorColor>${mainColor}</selectorColor>
      <primaryColor>${backgroundLightColor}</primaryColor>
      <secondaryColor>${backgroundLightColor}</secondaryColor>
    </textlist>

    <rating name="md_rating">
      <color>${mainColor}</color>
    </rating>
  </view>

  <!--Configurações da view "detailed"-->
  <view name="detailed">
    <rating name="md_rating">
      <unfilledColor>${mainColor}</unfilledColor>
    </rating>
  </view>

  <view name="menu">
    <menuText name="menutext">
      <selectedColor>${onMainColor}</selectedColor>
      <selectorColor>${mainColor}</selectorColor>
      <color>${backgroundLightColor}</color>
      <separatorColor>${backgroundLightColor}0f</separatorColor>
    </menuText>

    <menuTextSmall name="menutextsmall">
      <color>${sectionDarkColor}</color>
      <separatorColor>${mainColor}</separatorColor>
    </menuTextSmall>

    <menuGroup name="menugroup">
      <color>${sectionDarkColor}</color>
      <separatorColor>${sectionDarkColor}80</separatorColor>
      <backgroundColor>${sectionDarkColor}0f</backgroundColor>
    </menuGroup>

    <menuBackground name="menubg">
      <color>${backgroundDarkColor}</color>
    </menuBackground>

    <menuText name="menufooter">
      <color>${backgroundLightColor}cc</color>
    </menuText>

    <menuText name="menutitle">
      <color>${backgroundLightColor}</color>
    </menuText>

    <menuTextEdit name="menutextedit">
      <inactive>./assets/input_inactive-dark.svg</inactive>
      <active>./assets/input_active-dark.svg</active>
    </menuTextEdit>
  </view>

  <!--Configurações da view "grid"-->
  <view name="grid">
    <imagegrid name="gamegrid">
      <gameImage>./assets/icons/cartridge-dark.png</gameImage>
      <folderImage>./assets/icons/folder-dark.png</folderImage>
    </imagegrid>

    <text name="gridtile">
      <color>${backgroundLightColor}</color>
    </text>

    <text name="gridtile:selected">
      <color>${onMainColor}</color>
    </text>
  </view>

  <customView name="boxes" inherits="grid">
    <text name="gridtile">
      <color>${backgroundLightColor}</color>
    </text>
    <text name="gridtile:selected">
      <color>${backgroundLightColor}</color>
    </text>
  </customView>

  <!-- Carousel Config -->
  <view name="system">
    <carousel name="systemcarousel">
      <color ifSubset="custom_background:no">${backgroundDarkColor}1a</color>
      <color ifSubset="custom_background:yes">${backgroundDarkColor}4d</color>
    </carousel>

    <!-- System Name -->
    <text name="systemName" extra="true">
      <color>${backgroundLightColor}</color>
    </text>

    <!-- Total games per system -->
    <text name="systemInfo">
      <color>${backgroundLightColor}cc</color>
    </text>

    <!-- Logo Fallback -->
    <text name="logoText" extra="true">
      <color>${sectionDarkColor}</color>
    </text>

    <!-- System Background -->
    <image name="cover_fallback" extra="true">
      <color>${backgroundDarkColor}</color>
    </image>

    <image name="custom_bg_fg" extra="true">
      <color>${backgroundDarkColor}</color>
    </image>

    <!-- System Background -->
    <image name="osdBackground" extra="true">
      <color>${backgroundDarkColor}</color>
    </image>
  </view>

  <!-- Clock Settings -->
  <view name="screen">
    <text name="clock">
      <color>${backgroundLightColor}</color>
    </text>

    <batteryIndicator name="batteryIndicator">
      <color>${backgroundLightColor}</color>
    </batteryIndicator>

    <controllerActivity name="controllerActivity">
      <color>${backgroundLightColor}40</color>
      <activityColor>${mainColor}80</activityColor>
      <hotkeyColor>${mainColor}</hotkeyColor>
    </controllerActivity>
  </view>
</theme>
