<!--
  Theme: Elementerial
  Author: mluizvitor
-->

<theme>
  <formatVersion>7</formatVersion>

  <variables>
    <fgColor ifSubset="Variant:dark">FFFFFF</fgColor>
    <fgColor ifSubset="Variant:light">000000</fgColor>
  </variables>

  <!--Configurações de ajuda-->
  <view name="system, basic, detailed, grid">
    <helpsystem name="help">
      <textColor>${fgColor}</textColor>
      <iconColor>${sectColor}</iconColor>
    </helpsystem>
  </view>

  <!--Configurações de cores nas listas de jogos-->
  <view name="basic, detailed, grid">
    <text name="system_name, md_name">
      <color>${fgColor}</color>
    </text>

    <image name="background">
      <color>${bgColor}</color>
    </image>

    <image name="cover_list_fallback" extra="true">
      <color>${bgColor}</color>
    </image>

    <textlist name="gamelist">
      <selectedColor>${onMainColor}</selectedColor>
      <selectorColor>${mainColor}</selectorColor>
      <primaryColor>${fgColor}</primaryColor>
      <secondaryColor>${fgColor}</secondaryColor>
    </textlist>

    <rating name="md_rating">
      <color>${sectColor}</color>
      <unfilledColor>${sectColor}</unfilledColor>
    </rating>
  </view>

  <view name="menu">
    <menuText name="menutext">
      <selectedColor>${onMainColor}</selectedColor>
      <selectorColor>${mainColor}</selectorColor>
      <color>${fgColor}</color>
      <separatorColor>${fgColor}0f</separatorColor>
    </menuText>

    <menuTextSmall name="menutextsmall">
      <color>${sectColor}</color>
      <separatorColor>${mainColor}</separatorColor>
    </menuTextSmall>

    <menuGroup name="menugroup">
      <color>${sectColor}</color>
      <separatorColor>${sectColor}${percent.60}</separatorColor>
      <backgroundColor>${sectColor}${percent.10}</backgroundColor>
    </menuGroup>

    <menuBackground name="menubg">
      <color>${bgColor}</color>
    </menuBackground>

    <menuText name="menufooter">
      <color>${fgColor}cc</color>
    </menuText>

    <menuText name="menutitle">
      <color>${fgColor}</color>
    </menuText>

    <menuTextEdit name="menutextedit" ifSubset="Variant:dark">
      <inactive>./assets/input_inactive-dark.svg</inactive>
      <active>./assets/input_active-dark.svg</active>
    </menuTextEdit>

    <menuTextEdit name="menutextedit" ifSubset="Variant:light">
      <inactive>./assets/input_inactive-light.svg</inactive>
      <active>./assets/input_active-light.svg</active>
    </menuTextEdit>
  </view>

  <!--Configurações da view "grid"-->
  <view name="grid">
    <imagegrid name="gamegrid" ifSubset="Variant:dark">
      <gameImage>./assets/icons/cartridge-dark.png</gameImage>
      <folderImage>./assets/icons/folder-dark.png</folderImage>
    </imagegrid>

    <imagegrid name="gamegrid" ifSubset="Variant:light">
      <gameImage>./assets/icons/cartridge-light.png</gameImage>
      <folderImage>./assets/icons/folder-light.png</folderImage>
    </imagegrid>

    <text name="gridtile">
      <color>${fgColor}</color>
    </text>

    <text name="gridtile:selected">
      <color>${onMainColor}</color>
    </text>
  </view>

  <customView name="boxes" inherits="grid">
    <text name="gridtile">
      <color>${fgColor}</color>
    </text>
    <text name="gridtile:selected">
      <color>${fgColor}</color>
    </text>
  </customView>

  <!-- Carousel Config -->
  <view name="system">
    <carousel name="systemcarousel">
      <color ifSubset="custom_background:no">${bgColor}${percent.10}</color>
      <color ifSubset="custom_background:yes">${bgColor}${percent.30}</color>
    </carousel>

    <!-- System Name -->
    <text name="systemName" extra="true">
      <color>${fgColor}${percent.90}</color>
      <glowColor>${bgColor}${percent.20}</glowColor>
      <glowSize>1.5</glowSize>
    </text>

    <!-- Total games per system -->
    <text name="systemInfo">
      <color>${fgColor}${percent.80}</color>
      <glowColor>${bgColor}${percent.10}</glowColor>
      <glowSize>1.5</glowSize>
    </text>

    <!-- Logo Fallback -->
    <text name="logoText" extra="true">
      <color>${sectColor}</color>
    </text>

    <!-- System Background -->
    <image name="cover_fallback" extra="true">
      <color>${bgColor}</color>
    </image>

    <image name="custom_bg_fg" extra="true">
      <color>${bgColor}</color>
    </image>

    <!-- System Background -->
    <image name="osdBackground" extra="true">
      <color>${bgColor}</color>
    </image>
  </view>

  <!-- Clock Settings -->
  <view name="screen">
    <text name="clock">
      <color>${fgColor}</color>
    </text>

    <batteryIndicator name="batteryIndicator">
      <color>${fgColor}</color>
    </batteryIndicator>

    <controllerActivity name="controllerActivity">
      <color>${fgColor}${percent.30}</color>
      <activityColor>${mainColor}${percent.70}</activityColor>
      <hotkeyColor>${mainColor}</hotkeyColor>
    </controllerActivity>
  </view>
</theme>
