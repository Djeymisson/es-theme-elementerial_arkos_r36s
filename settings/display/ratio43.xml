<!--
  Theme: Elementerial
  Author: mluizvitor
-->

<theme>
  <formatVersion>7</formatVersion>

  <variables>
    <header1F>0.058333</header1F> <!-- 28px -->
    <header2F>0.05</header2F> <!-- 28px -->
    <bodyF>0.0375</bodyF> <!-- 18px -->
    <tinyF>0.029166</tinyF> <!-- 14px -->
  </variables>

  <view name="system, basic, detailed, grid">
    <helpsystem name="help">
      <fontSize>${tinyF}</fontSize>
    </helpsystem>
    
    <image name="borderOverlay" extra="true">
      <path>./assets/ratio32/borders.png</path>
      <pos>0 0</pos>
      <origin>0 0</origin>
      <size>1 1</size>
      <zIndex>110</zIndex>
    </image>
  </view>

  <view name="basic, detailed">
    <text name="system_name">
      <pos>0.0375 0.1</pos>      <!-- 640x480 / 24x 48y -->
      <origin>0 0.5</origin>      <!--vertical center-->
    </text>
  </view>

  <view name="basic">
    <textlist name="gamelist">
      <pos>0 0.2</pos>      <!-- 640x480 / 0x 96y -->
      <size>1 0.733333</size>      <!-- 640x480 / 640x 352y -->
      <horizontalMargin>0.0375</horizontalMargin> <!-- 640x480 / 24px -->
    </textlist>
  </view>

  <view name="detailed">
    <textlist name="gamelist">
      <pos>0 0.2</pos>      <!-- 640x480 / 0x 96y -->
      <size>0.475 0.733333</size>      <!-- 640x480 / 304x 352y-->
      <horizontalMargin>0.0375</horizontalMargin> <!-- 640x480 / 24px -->
    </textlist>

    <image name="md_image">
      <pos>0.7375 0.266666</pos> <!-- 640x480 / 472x (center of the 2nd half) 128y-->
      <origin>0.5 0</origin> <!-- horizontal center -->
      <maxSize>0.425 0.533333</maxSize> <!-- 640x480 / 272x 256y-->
      <zIndex>32</zIndex>
      <roundCorners>0.03</roundCorners>
    </image>

    <image name="md_marquee">
      <pos>0.7375 0.266666</pos> <!-- 640x480 / 472x (center of the 2nd half) 128y-->
      <origin>0.5 0.75</origin> <!-- horizontal center -->
      <maxSize>0.375 0.266666</maxSize> <!-- 640x480 / 248x 128y-->
      <zIndex>33</zIndex>
    </image>

    <rating name="md_rating">
      <origin>0 0</origin>
      <pos>0.6125 0.85</pos>
      <size>0.066666</size> <!-- 32px -->
    </rating>
  </view>

  <view name="grid">
    <text name="system_name">
      <pos>0.0375 0.083333</pos>      <!--640x480 / 24x 40y-->
      <origin>0 0.5</origin>      <!--vertical center-->
      <size>0.68 ${bodyF}</size>
    </text>

    <text name="md_name">
      <fontSize>${bodyF}</fontSize>
      <fontPath>${fontRegular}</fontPath>
      <pos>0.0375 0.15</pos>      <!--640x480 / 24x 72y-->
      <origin>0 0.5</origin>      <!--vertical center-->
      <size>0.925 ${bodyF}</size> <!-- 640x480 / 592x (screen - padding 24px) -->
      <alignment>left</alignment>
      <zIndex>41</zIndex>
    </text>
  </view>


  <!-- Carousel Config -->
  <view name="system">
    <!-- Cards position -->
    <carousel name="systemcarousel">
      <size>1.75 1</size>
      <logoSize>1 0.25</logoSize>
      <logoScale>1.4</logoScale>
      <maxLogoCount>6</maxLogoCount>
      <logoPos>0.125 0.545</logoPos>
    </carousel>

    <!-- System Name -->
    <text name="systemName" extra="true">
      <pos>0.0625 0.3</pos> <!-- 640x480 / 40x 144y -->
      <size>0.8875 ${header1F}</size>
    </text>

    <!-- Total games per system -->
    <text name="systemInfo">
      <pos>0.0625 0.383333</pos> <!-- 640x480 / 40x 184y -->
    </text>

    <image name="osdBackground" extra="true">
      <path>./assets/ratio43/osd-bg.png</path>
    </image>

    <image name="borderOverlay" extra="true">
      <path>./assets/ratio43/borders.png</path>
      <pos>0 0</pos>
      <origin>0 0</origin>
      <size>1 1</size>
      <zIndex>110</zIndex>
    </image>
  </view>

  <!-- Clock Settings -->
  <view name="screen">
    <text name="clock">
      <pos>0.64 0.018750</pos>
      <size>0.20 ${bodyF}</size>
    </text>

    <batteryIndicator name="batteryIndicator">
      <pos>0.944 0.025</pos>
      <size>0.0375 0.05</size> <!-- 640x480 / 24x 24y -->

      <!-- Assets -->
      <full>./assets/ratio43/battery-full.png</full>
      <at75>./assets/ratio43/battery-75.png</at75>
      <at50>./assets/ratio43/battery-50.png</at50>
      <at25>./assets/ratio43/battery-25.png</at25>
      <empty>./assets/ratio43/battery-empty.png</empty>
      <incharge>./assets/ratio43/battery-charging.png</incharge>
      <networkIcon>./assets/ratio43/wifi.png</networkIcon>
    </batteryIndicator>
  </view>

</theme>
