<!--
  Theme: Elementerial
  Author: mluizvitor
-->

<theme>
  <formatVersion>7</formatVersion>

  <variables>
    <header1F>0.0625</header1F>
    <header2F>0.056250</header2F>
    <bodyF>0.037500</bodyF>
    <tinyF>0.031250</tinyF>
  </variables>

  <view name="system, basic, detailed, grid">
    <helpsystem name="help">
      <fontSize>${tinyF}</fontSize>
    </helpsystem>
  </view>

  <view name="basic, detailed">
    <text name="system_name">
      <pos>0.05 0.0875</pos>      <!--480x320 / 24h 28h-->
      <origin>0 0.5</origin>      <!--vertical center-->
    </text>
  </view>

  <view name="basic">
    <textlist name="gamelist">
      <pos>0 0.175</pos>
      <size>1 0.75</size>      <!-- 480x320 / 232x240-->
      <horizontalMargin>0.05</horizontalMargin>
    </textlist>
  </view>

  <view name="detailed">
    <textlist name="gamelist">
      <pos>0 0.175</pos>
      <size>0.483333 0.75</size>      <!-- 480x320 / 232x240-->
      <horizontalMargin>0.05</horizontalMargin>
    </textlist>

    <image name="md_image">
      <pos>0.733333 0.3</pos>
      <origin>0.5 0</origin>
      <maxSize>0.433333 0.537500</maxSize>
      <zIndex>32</zIndex>
      <roundCorners>0.02</roundCorners>
    </image>

    <image name="md_marquee">
      <pos>0.733333 0.175</pos>
      <origin>0.5 0</origin>
      <maxSize>0.4 0.225</maxSize>
      <zIndex>33</zIndex>
    </image>

    <rating name="md_rating">
      <origin>0 0</origin>
      <pos>0.608333 0.85</pos>
      <size>0.075</size>
    </rating>
  </view>

  <view name="grid">
    <text name="system_name">
      <pos>0.05 0.075</pos>      <!--480x320 / 24h 20h-->
      <origin>0 0.5</origin>      <!--vertical center-->
    </text>

    <text name="md_name">
      <fontSize>${bodyF}</fontSize>
      <fontPath>${fontRegular}</fontPath>
      <pos>0.05 0.15</pos>      <!--480x320 / 24h 48h-->
      <origin>0 0.5</origin>      <!--vertical center-->
      <size>0.9 0.05</size>
      <alignment>left</alignment>
      <zIndex>41</zIndex>
    </text>
  </view>


  <!-- Carousel Config -->
  <view name="system">
    <!-- Cards position -->
    <carousel name="systemcarousel">
      <size>1.75 1</size>
      <logoSize>1 0.275</logoSize>
      <logoScale>1.4</logoScale>
      <maxLogoCount>6</maxLogoCount>
      <logoPos>0.125 0.545</logoPos>
    </carousel>

    <!-- System Name -->
    <text name="systemName" extra="true">
      <pos>0.08333 0.275</pos>
    </text>

    <!-- Total games per system -->
    <text name="systemInfo">
      <pos>0.08333 0.375</pos>
    </text>

    <image name="osdBackground" extra="true">
      <path>./assets/ratio32/osd-bg.png</path>
    </image>
  </view>

  <!-- Clock Settings -->
  <view name="screen">
    <text name="clock">
      <!-- <pos>0.85 0.0875</pos> -->
      <pos>0.7 0.018750</pos>
      <size>0.15 0.1</size>
    </text>

    <batteryIndicator name="batteryIndicator">
      <pos>0.944 0.025</pos>
      <!-- 16x16 â†’ 480x320 -->
      <size>0.033333 0.05</size>

      <!-- Assets -->
      <full>./assets/ratio32/battery-full.png</full>
      <at75>./assets/ratio32/battery-75.png</at75>
      <at50>./assets/ratio32/battery-50.png</at50>
      <at25>./assets/ratio32/battery-25.png</at25>
      <empty>./assets/ratio32/battery-empty.png</empty>
      <incharge>./assets/ratio32/battery-charging.png</incharge>
      <networkIcon>./assets/ratio32/wifi.png</networkIcon>
    </batteryIndicator>
  </view>

</theme>
