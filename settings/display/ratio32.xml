<!--
  Theme: Elementerial
  Author: mluizvitor
-->

<theme>
  <formatVersion>7</formatVersion>

  <variables>
    <header1F>0.0625</header1F>
    <header2F>0.056250</header2F>
    <bodyF>0.037500</bodyF>
    <tinyF>0.031250</tinyF>
  </variables>

  <view name="system, basic, detailed, grid">
    <helpsystem name="help">
      <fontSize>${tinyF}</fontSize>
    </helpsystem>
  </view>

  <view name="basic, detailed, grid">
    <text name="system_name">
      <pos>0.033333 0.087500</pos>
      <origin>0 0.5</origin>
    </text>

    <textlist name="gamelist">
      <selectorHeight>0.096875</selectorHeight>
      <pos>0 0.175</pos>
      <size>1 0.75</size>
      <horizontalMargin>0.033333</horizontalMargin>
      <lineSpacing>1.75</lineSpacing>
    </textlist>

    <image name="background">
      <path>./assets/ratio32/carousel.png</path>
    </image>
  </view>

  <view name="detailed">
    <textlist name="gamelist">
      <size>0.5 0.75</size>
    </textlist>

    <image name="md_image">
      <pos>0.75 0.3</pos>
      <origin>0.5 0</origin>
      <maxSize>0.45 0.537500</maxSize>
      <zIndex>30</zIndex>
      <roundCorners>0.02</roundCorners>
    </image>

    <image name="md_marquee">
      <pos>0.75 0.175</pos>
      <origin>0.5 0</origin>
      <maxSize>0.4 0.225</maxSize>
      <zIndex>31</zIndex>
    </image>

    <rating name="md_rating">
      <origin>0 0</origin>
      <pos>0.625 0.85</pos>
      <size>0.075</size>
    </rating>
  </view>

  <view name="grid">
    <imagegrid name="gamegrid">
      <pos>0 0.175</pos>
      <size>1 0.75</size>

      <!--480x320 / 16x8-->
      <margin>0.033333 0.025</margin>
      <!--480x320 / 16x0-->
      <padding>0.033333 0</padding>
    </imagegrid>
  </view>

  <!-- Carousel Config -->
  <view name="system">
    <!-- Cards position -->
    <carousel name="systemcarousel">
      <size>1.75 1</size>
      <logoSize>1 0.275</logoSize>
      <logoScale>1.4</logoScale>
      <maxLogoCount>6</maxLogoCount>
      <logoPos>0.125 0.545</logoPos>
    </carousel>

    <!-- System Name -->
    <text name="systemName" extra="true">
      <pos>0.08333 0.275</pos>
    </text>

    <!-- Total games per system -->
    <text name="systemInfo">
      <pos>0.08333 0.375</pos>
    </text>

    <image name="osdBackground" extra="true">
      <path>./assets/ratio32/osd-bg.png</path>
    </image>
  </view>

  <!-- Clock Settings -->
  <view name="screen">
    <text name="clock">
      <!-- <pos>0.85 0.0875</pos> -->
      <pos>0.7 0.018750</pos>
      <size>0.15 0.1</size>
    </text>

    <batteryIndicator name="batteryIndicator">
      <pos>0.944 0.025</pos>
      <!-- 16x16 â†’ 480x320 -->
      <size>0.033333 0.05</size>

      <!-- Assets -->
      <full>./assets/ratio32/battery-full.png</full>
      <at75>./assets/ratio32/battery-75.png</at75>
      <at50>./assets/ratio32/battery-50.png</at50>
      <at25>./assets/ratio32/battery-25.png</at25>
      <empty>./assets/ratio32/battery-empty.png</empty>
      <incharge>./assets/ratio32/battery-charging.png</incharge>
      <networkIcon>./assets/ratio32/wifi.png</networkIcon>
    </batteryIndicator>
  </view>

</theme>
