<!--
  Theme: Elementerial
  Author: mluizvitor
-->

<theme>
  <formatVersion>7</formatVersion>

  <variables>
    <header1F>0.058333</header1F> <!-- 28px -->
    <header2F>0.05</header2F> <!-- 28px -->
    <bodyF>0.0375</bodyF> <!-- 18px -->
    <tinyF>0.029166</tinyF> <!-- 14px -->
  </variables>

  <view name="system, basic, detailed, grid">
    <helpsystem name="help">
      <fontSize>${tinyF}</fontSize>
    </helpsystem>
    
    <image name="borderOverlay" extra="true">
      <path>./assets/ratio53/borders.png</path>
      <pos>0 0</pos>
      <origin>0 0</origin>
      <size>1 1</size>
      <zIndex>110</zIndex>
    </image>
  </view>

  <view name="basic, detailed">
    <text name="system_name">
      <pos>0.0375 0.076389</pos>      <!-- 640x480 / 24x 48y -->
      <origin>0 0.5</origin>      <!--vertical center-->
    </text>
  </view>

  <view name="basic">
    <textlist name="gamelist">
      <pos>0 0.180556</pos>      <!-- 640x480 / 0x 96y -->
      <size>1 0.750000</size>      <!-- 640x480 / 640x 352y -->
      <horizontalMargin>0.0375</horizontalMargin> <!-- 640x480 / 24px -->
    </textlist>
  </view>

  <view name="detailed">
    <textlist name="gamelist">
      <pos>0 0.180556</pos>
      <size>0.483333 0.750000</size>
      <horizontalMargin>0.03333</horizontalMargin>
    </textlist>

    <image name="md_image">
      <pos>0.741667 0.208333</pos>
      <origin>0.5 0</origin>
      <maxSize>0.45 0.625000</maxSize>
      <zIndex>32</zIndex>
      <roundCorners>0.03</roundCorners>
    </image>

    <image name="md_marquee">
      <pos>0.741667 0.208333</pos>
      <origin>0.5 0.6</origin>
      <maxSize>0.395833 0.180556</maxSize>
      <zIndex>33</zIndex>
    </image>

    <rating name="md_rating">
      <origin>0 0</origin>
      <pos>0.658333 0.854167</pos>
      <size>0.055556</size>
    </rating>
  </view>

  <view name="grid">
    <text name="system_name">
      <pos>0.0375 0.072917</pos>
      <origin>0 0.5</origin>
      <size>0.9 ${bodyF}</size>
    </text>

    <text name="md_name">
      <fontSize>${bodyF}</fontSize>
      <fontPath>${fontRegular}</fontPath>
      <pos>0.0375 0.131944</pos>
      <origin>0 0.5</origin>
      <size>0.9 ${bodyF}</size>
      <alignment>left</alignment>
      <zIndex>41</zIndex>
    </text>
  </view>


  <!-- Carousel Config -->
  <view name="system">
    <!-- Cards position -->
    <carousel name="systemcarousel">
      <size>1.7 1</size>
      <logoSize>1 0.25</logoSize>
      <logoScale>1.5</logoScale>
      <maxLogoCount>7</maxLogoCount>
      <logoPos>0.1 0.545</logoPos>
    </carousel>

    <!-- System Name -->
    <text name="systemName" extra="true">
      <pos>0.1 0.3</pos>
      <size>0.8875 ${header1F}</size>
    </text>

    <!-- Total games per system -->
    <text name="systemInfo">
      <pos>0.1 0.383333</pos>
    </text>

    <image name="osdBackground" extra="true">
      <path>./assets/ratio53/osd-bg.png</path>
    </image>

    <image name="borderOverlay" extra="true">
      <path>./assets/ratio53/borders.png</path>
      <pos>0 0</pos>
      <origin>0 0</origin>
      <size>1 1</size>
      <zIndex>110</zIndex>
    </image>
  </view>

  <!-- Clock Settings -->
  <view name="screen">
    <text name="clock">
      <pos>0.67 0.0225</pos>
      <size>0.20 ${bodyF}</size>
    </text>

    <batteryIndicator name="batteryIndicator">
      <pos>0.944 0.02</pos>
      <size>0.0375 0.05</size>

      <!-- Assets -->
      <full>./assets/ratio53/battery-full.png</full>
      <at75>./assets/ratio53/battery-75.png</at75>
      <at50>./assets/ratio53/battery-50.png</at50>
      <at25>./assets/ratio53/battery-25.png</at25>
      <empty>./assets/ratio53/battery-empty.png</empty>
      <incharge>./assets/ratio53/battery-charging.png</incharge>
      <networkIcon>./assets/ratio53/wifi.png</networkIcon>
    </batteryIndicator>
  </view>

</theme>
