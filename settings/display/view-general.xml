<!--
  Theme: Elementerial-ArkOS
-->

<theme>
  <formatVersion>7</formatVersion>

  <!--Configurações de ajuda-->
  <view name="system, basic, detailed, grid, video">
    <helpsystem name="help">
      <fontPath>${fontHelper}</fontPath>
      <fontSize>${fontSizeCaption}</fontSize>
      <origin>0 0.5</origin>
      <pos>0.016666667 0.96</pos>
    </helpsystem>

    <image name="borderOverlay" extra="true">
      <path>./assets/${ratioPath}/borders.png</path>
      <pos>0 0</pos>
      <origin>0 0</origin>
      <size>1 1</size>
      <zIndex>100</zIndex>
    </image>
  </view>

  <!--Configurações comuns de views-->
  <view name="basic, detailed, grid, video">
    <text name="logoText">
      <fontPath>${fontBold}</fontPath>
      <fontSize>${fontSizeH2}</fontSize>
      <forceUppercase>0</forceUppercase>
      <alignment>left</alignment>
      <zIndex>5</zIndex>
    </text>

    <textlist name="gamelist">
      <fontPath>${fontRegular}</fontPath>
      <fontSize>${fontSizeBody}</fontSize>
      <alignment>left</alignment>
      <origin>0 0</origin>
      <zIndex>5</zIndex>
    </textlist>

    <image name="background">
      <path>./assets/images/background.png</path>
      <pos>0 0</pos>
      <origin>0 0</origin>
      <size>1 1</size>
      <zIndex>-10</zIndex>
    </image>

    <image name="cover_list" extra="true">
      <path>./assets/systems/${system.theme}.webp</path>
      <opacity>0.3</opacity>
      <size>1 0</size>
      <origin>0 0.5</origin>
      <pos>0 0.125</pos>
      <zIndex>-5</zIndex>
    </image>

    <image name="custom_bg_fg" extra="true">
      <path>./assets/${ratioPath}/gamelist-basic.png</path>
      <size>1 1</size>
      <origin>0 0</origin>
      <pos>0 0</pos>
      <zIndex>-4</zIndex>
    </image>
  </view>

  <view name="system, basic, detailed, grid">
    <image name="osdBackground" extra="true">
      <pos>0 0</pos>
      <origin>0 0</origin>
      <size>1 1</size>
      <zIndex>100</zIndex>
    </image>
  </view>

  <view name="basic, detailed, video">
    <text name="logoText">
      <pos>0.033333 0.1</pos>      <!--480x320 / 16x 32y-->
      <size>0.933333 ${fontSizeH2}</size>      <!-- 480x320 / 448x -->
      <origin>0 0.5</origin>
    </text>

    <textlist name="gamelist">
      <pos>0 0.15</pos>      <!-- 480x320 / 0x 48y --> <!-- CHANGED: 0.2 -->
      <horizontalMargin>0.033333</horizontalMargin>      <!-- 16px -->

      <lineSpacing>${general-gamelist-lineSpacing}</lineSpacing>
      <lineSpacing ifHelpPrompts="true">${general-gamelist-lineSpacing-help}</lineSpacing>
    </textlist>
  </view>

</theme>