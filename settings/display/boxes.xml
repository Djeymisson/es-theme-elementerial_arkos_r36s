<!--
  Theme: Elementerial
  Author: mluizvitor
-->

<theme>
  <formatVersion>7</formatVersion>

  <subset name="GridImage" displayName="Image type" appliesTo="grid">
    <include name="gridscreenshot" displayName="Screenshot"/>
    <include name="gridthumbnail" displayName="Thumbnail"/>
    <include name="gridlogo" displayName="Logo"/>
  </subset>

  <!--Confugurações da view "grid"-->
  <customView name="boxes" inherits="grid">
    <imagegrid name="gamegrid">
      <scrollDirection>horizontal</scrollDirection>
      <autoLayout>2 2</autoLayout>
      <scrollLoop>false</scrollLoop>

      <imageSource>image</imageSource>

      <margin ifSubset="Ratio:ratio32">0.0333333 0.05</margin>      <!--480x320 / 16x16-->
    </imagegrid>

    <gridtile name="default, selected">
      <selectionMode>full</selectionMode>
      <imageSizeMode>minSize</imageSizeMode>
    </gridtile>

    <gridtile name="default">
      <padding ifSubset="Ratio:ratio32">0 0</padding>
      <backgroundColor>00000000</backgroundColor>
      <imageColor>b2b2b2FF</imageColor>
    </gridtile>

    <gridtile name="selected">
      <padding ifSubset="Ratio:ratio32">4 4</padding>
      <backgroundColor>${mainColor}</backgroundColor>
      <imageColor>${sectionLightColor}</imageColor>
    </gridtile>

    <image name="gridtile.image">
      <roundCorners ifSubset="Ratio:ratio32">0.06</roundCorners>
    </image>

    <image name="gridtile.image:selected">
      <roundCorners ifSubset="Ratio:ratio32">0.05</roundCorners>
    </image>

    <ninepatch name="gridtile.background">
      <path>./assets/menu.png</path>
      <cornerSize>16 16</cornerSize>
    </ninepatch>

    <image name="gridtile.marquee">
      <color>FFFFFFFF</color>
      <pos>0.5 0.5</pos>
      <origin>0.5 0.5</origin>
      <maxSize>0.7 0.7</maxSize>
    </image>

    <image name="gridtile.marquee:selected">
      <color>FFFFFFFF</color>
      <maxSize>0.8 0.8</maxSize>
    </image>

    <text name="gridtile">
      <size>1 0.2</size>
      <pos>0 0.7</pos>
      <fontSize>${tinyF}</fontSize>
      <fontPath>${fontRegular}</fontPath>
      <alignment>center</alignment>
      <lineSpacing>1.2</lineSpacing>
      <backgroundColor>00000080</backgroundColor>
    </text>
  </customView>
</theme>
