<!--
  Theme: Elementerial
  Author: mluizvitor
-->

<theme>
  <formatVersion>7</formatVersion>

  <subset name="GridImage" displayName="Image type" appliesTo="grid">
    <include name="gridscreenshot" displayName="Screenshot"/>
    <include name="gridthumbnail" displayName="Thumbnail"/>
    <include name="gridlogo" displayName="Logo"/>
  </subset>

  <!--Confugurações da view "grid"-->
  <customView name="boxes" inherits="grid">
    <imagegrid name="gamegrid">
      <scrollDirection>vertical</scrollDirection>
      <autoLayout>2 2</autoLayout>
      <scrollLoop>false</scrollLoop>

      <imageSource>image</imageSource>
    </imagegrid>

    <gridtile name="default, selected">
      <selectionMode>full</selectionMode>
      <imageSizeMode>minSize</imageSizeMode>
    </gridtile>

    <gridtile name="default">
      <padding>0 0</padding>
      <backgroundColor>00000000</backgroundColor>
      <imageColor>666666FF</imageColor>
    </gridtile>

    <gridtile name="selected">
      <padding ifSubset="Ratio:ratio32">4 4</padding>
      <backgroundColor>${mainColor}</backgroundColor>
      <imageColor>22222222</imageColor>
    </gridtile>

    <image name="gridtile.image">
      <roundCorners ifSubset="Ratio:ratio32">0.07</roundCorners>
    </image>

    <ninepatch name="gridtile.background">
      <path>./assets/menu.png</path>
      <cornerSize>16 16</cornerSize>
    </ninepatch>

    <image name="gridtile.marquee">
      <color>FFFFFFFF</color>
      <pos>0.5 0.5</pos>
      <origin>0.5 0.5</origin>
      <maxSize>0.7 0.7</maxSize>
    </image>

    <image name="gridtile.marquee:selected">
      <color>FFFFFFFF</color>
      <maxSize>0.9 0.9</maxSize>
    </image>

    <text name="gridtile">
      <fontSize>${tinyF}</fontSize>
      <fontPath>${fontRegular}</fontPath>
      <alignment>center</alignment>
      <size>0 0.225</size>
      <singleLineScroll>false</singleLineScroll>
      <padding>0.06 0.0075</padding>
      <lineSpacing>1</lineSpacing>
    </text>

    <text name="md_title">
      <color>ff0000</color>
      <pos>0 0</pos>
      <fontPath>${fontRegular}</fontPath>
      <fontSize>${bodyF}</fontSize>
    </text>

    <rating name="md_rating">
      <pos>1 1</pos>
      <color>00000000</color>
    </rating>
  </customView>
</theme>