<!--
  Theme: Elementerial
  Author: mluizvitor
-->

<theme>
  <formatVersion>7</formatVersion>

  <subset name="GridImage" displayName="Image type" appliesTo="grid">
    <include name="gridscreenshot" displayName="Screenshot"/>
    <include name="gridthumbnail" displayName="Thumbnail"/>
  </subset>

  <!--Confugurações da view "grid"-->

  <view name="grid">
    <imagegrid name="gamegrid">
      <scrollDirection>horizontal</scrollDirection>
      <autoLayout>3 2</autoLayout>
      <scrollLoop>false</scrollLoop>

      <imageSource ifSubset="GridImage:gridscreenshot">image</imageSource>
      <imageSource ifSubset="GridImage:gridthumbnail">thumbnail</imageSource>

      <!-- Tamanhos para ratio32 -->
      <pos ifSubset="Ratio:ratio32">0 0.225</pos>      <!-- 480x320 / 0x 72y-->
      <size ifSubset="Ratio:ratio32">1 0.7</size>      <!--480x320 / 480h 224v-->
      <margin ifSubset="Ratio:ratio32">0.033333 0.025</margin>      <!-- 480x320 / 16x 8y -->
      <padding ifSubset="Ratio:ratio32">0.05 0</padding>      <!-- 480x320 / 24x 0y -->

      <!-- Tamanhos para ratio43 -->
      <pos ifSubset="Ratio:ratio43">0 0.2</pos>      <!-- 640x480 / 0x 96y -->
      <size ifSubset="Ratio:ratio43">1 0.716666</size>      <!-- 640x4800 / 640x 344y-->
      <margin ifSubset="Ratio:ratio43">0.025 0.033333</margin>      <!-- 640x480 / 16x 16y-->
      <padding ifSubset="Ratio:ratio43">0.0375 0</padding>      <!--640x480 / 24x0-->
    </imagegrid>

    <gridtile name="default, selected">
      <selectionMode>full</selectionMode>
      <imageSizeMode ifSubset="GridImage:gridscreenshot|gridthumbnail">minSize</imageSizeMode>
      <imageSizeMode ifSubset="GridImage:gridlogo">maxSize</imageSizeMode>
    </gridtile>

    <gridtile name="default">
      <padding>0 0</padding>
      <backgroundColor>00000000</backgroundColor>
      <imageColor>FFFFFFFF</imageColor>
    </gridtile>

    <gridtile name="selected">
      <padding ifSubset="Ratio:ratio32">4 4</padding>
      <padding ifSubset="Ratio:ratio43">6 6</padding>

      <backgroundCornerSize>0.05</backgroundCornerSize>
      <backgroundColor>${mainColor}</backgroundColor>
      <imageColor>FFFFFFFF</imageColor>
    </gridtile>

    <image name="gridtile.image">
      <roundCorners>0.06</roundCorners>
    </image>

    <image name="gridtile.image:selected">
      <roundCorners>0.05</roundCorners>
    </image>

    <ninepatch name="gridtile.background">
      <path ifSubset="Ratio:ratio32">./assets/ratio32/menu.png</path>
      <path ifSubset="Ratio:ratio43">./assets/ratio43/menu.png</path>
      <cornerSize>16 16</cornerSize>
    </ninepatch>

    <text name="gridtile">
      <fontSize>${tinyF}</fontSize>
      <fontPath>${fontRegular}</fontPath>
      <alignment>center</alignment>
      <singleLineScroll>false</singleLineScroll>
      <lineSpacing>1.1</lineSpacing>

      <!-- Tamanhos para ratio32 -->
      <size ifSubset="Ratio:ratio32">0.92 0.14</size>
      <padding ifSubset="Ratio:ratio32">0.04 0</padding>

      <!-- Tamanhos para ratio43 -->
      <size ifSubset="Ratio:ratio43">0.9 0.1</size>
      <padding ifSubset="Ratio:ratio43">0.05 0</padding>
    </text>

    <rating name="md_rating">
      <pos>1 1</pos>
      <color>00000000</color>
    </rating>
  </view>
</theme>