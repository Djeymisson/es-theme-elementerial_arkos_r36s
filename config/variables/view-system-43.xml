<!--
  Theme: Elementerial-ArkOS
-->

<theme>
    <formatVersion>7</formatVersion>

    <variables>
        <ratioPath>ratio43</ratioPath>

        <!-- from view-system.xml -->
        <systemcarousel-size>1.1 1</systemcarousel-size>
        <systemcarousel-maxLogoCount>4</systemcarousel-maxLogoCount>
        <systemcarousel-logoPos>0.15 0.6</systemcarousel-logoPos>
        <systemName-pos>0.07 0.41</systemName-pos>
        <systemInfo-pos>0.07 0.5</systemInfo-pos>
        <clock-pos>0 0.0375</clock-pos>
        <clock-size>0.84 0</clock-size>
        <batteryIndicator-size>0.05</batteryIndicator-size>

        <!-- from view-general.xml -->
        <general-gamelist-lineSpacing>1.375</general-gamelist-lineSpacing>
        <general-gamelist-lineSpacing-help>1.4</general-gamelist-lineSpacing-help>
        <general-rating-pos>0.6075 0.83125</general-rating-pos>
        <general-rating-size>0.066667</general-rating-size>

        <!-- from view-grid.xml -->
        <grid-gamegrid-autoLayout>3 2</grid-gamegrid-autoLayout>
        <grid-gamegrid-margin>0.033333 0.025</grid-gamegrid-margin>
        <grid-gridtile-padding>4 4</grid-gridtile-padding>
        <grid-gridtile-image-roundCorners>0.04</grid-gridtile-image-roundCorners>
        <grid-gridtile-image-sel-roundCorners>0.025</grid-gridtile-image-sel-roundCorners>
        <grid-gridtile-background-path>./assets/images/grid-selector@2.png</grid-gridtile-background-path>
        <grid-gridtile-background-cornerSize>6 6</grid-gridtile-background-cornerSize>
        <grid-gridtile-text-size>0.9 0.225</grid-gridtile-text-size>
        <grid-gridtile-text-padding>0.05 0</grid-gridtile-text-padding>

        <!-- from view-boxes.xml -->
        <boxes-gamegrid-margin>0.025 0.033333</boxes-gamegrid-margin>      <!-- 640x480 / 16x 16y -->
        <boxes-gridtile-image-roundCorners>0.025</boxes-gridtile-image-roundCorners>
        <boxes-gridtile-image-sel-roundCorners>0.01</boxes-gridtile-image-sel-roundCorners>

        <!-- from view-elementflix.xml -->
        <elementflix-gamegrid-autoLayout>3.5 1</elementflix-gamegrid-autoLayout>
        <elementflix-gridtile-padding>3 3</elementflix-gridtile-padding>
    </variables>

</theme>