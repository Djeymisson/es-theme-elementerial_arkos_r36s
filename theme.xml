<theme>
  <formatVersion>7</formatVersion>

  <variables>
    <fontRegular>./assets/fonts/Inter/Inter-Regular.otf</fontRegular>
    <fontBold>./assets/fonts/Inter/Inter-Bold.otf</fontBold>
    <fontLight>./assets/fonts/Inter/Inter-Light.otf</fontLight>
    <fontHelper>./assets/fonts/RobotoCondensed/RobotoCondensed-Light.ttf</fontHelper>

    <subset.themesettings>Flavor (Main Color)</subset.themesettings>
    <subset.variantSet>Topping (Variant)</subset.variantSet>
    <subset.ratiosettings>Cup (Screen)</subset.ratiosettings>
  </variables>

  <subset name="themeFlavor" displayName="${subset.themesettings}">
    <include name="strawberry" displayName="strawberry">./settings/colors/strawberry.xml</include>
    <include name="orange" displayName="orange">./settings/colors/orange.xml</include>
    <include name="banana" displayName="banana">./settings/colors/banana.xml</include>
    <include name="lime" displayName="lime">./settings/colors/lime.xml</include>
    <include name="mint" displayName="mint">./settings/colors/mint.xml</include>
    <include name="blueberry" displayName="blueberry">./settings/colors/blueberry.xml</include>
    <include name="grape" displayName="grape">./settings/colors/grape.xml</include>
    <include name="bubblegun" displayName="bubblegun">./settings/colors/bubblegun.xml</include>
    <include name="cocoa" displayName="cocoa">./settings/colors/cocoa.xml</include>
    <include name="slate" displayName="slate">./settings/colors/slate.xml</include>
  </subset>

  <subset name="themeTopping" displayName="${subset.variantSet}">
    <include name="dark" displayName="Chocolate Sauce">./settings/colors/commom-dark.xml</include>
    <include name="light" displayName="Vanilla Sauce">./settings/colors/commom-light.xml</include>
    <include name="hybrid" displayName="Both Sauces">./settings/colors/commom-hybrid.xml</include>
  </subset>

  <subset name="Ratio" displayName="${subset.ratiosettings}">
    <include name="ratio32" displayName="3:2 | 480x320">./settings/ratios/ratio32.xml</include>
    <include name="ratio43" displayName="4:3 | 640x480">./settings/ratios/ratio43.xml</include>
    <include name="ratio169" displayName="16:9 | 720p | 1080p">./settings/ratios/ratio169.xml</include>
  </subset>

  <subset name="teste" displayName="Teste" appliesTo="teste,teste">
    <include name="sim" displayName="sim"/>
    <include name="não" displayName="não"/>
  </subset>

  <include>./settings/ratios/commom.xml</include>

</theme>
