<!--
  Theme: Elementerial-ArkOS
-->

<theme>
    <formatVersion>7</formatVersion>

    <subset name="Color scheme" displayName="Color scheme">
        <include name="strawberry-dark" displayName="strawberry (dark)">./config/colors/strawberry-dark.xml</include>
        <include name="strawberry-light" displayName="strawberry (light)">./config/colors/strawberry-light.xml</include>
        <include name="orange-dark" displayName="orange (dark)">./config/colors/orange-dark.xml</include>
        <include name="orange-light" displayName="orange (light)">./config/colors/orange-light.xml</include>
        <include name="banana-dark" displayName="banana (dark)">./config/colors/banana-dark.xml</include>
        <include name="banana-light" displayName="banana (light)">./config/colors/banana-light.xml</include>
        <include name="lime-dark" displayName="lime (dark)">./config/colors/lime-dark.xml</include>
        <include name="lime-light" displayName="lime (light)">./config/colors/lime-light.xml</include>
        <include name="mint-dark" displayName="mint (dark)">./config/colors/mint-dark.xml</include>
        <include name="mint-light" displayName="mint (light)">./config/colors/mint-light.xml</include>
        <include name="blueberry-dark" displayName="blueberry (dark)">./config/colors/blueberry-dark.xml</include>
        <include name="blueberry-light" displayName="blueberry (light)">./config/colors/blueberry-light.xml</include>
        <include name="grape-dark" displayName="grape (dark)">./config/colors/grape-dark.xml</include>
        <include name="grape-light" displayName="grape (light)">./config/colors/grape-light.xml</include>
        <include name="bubblegum-dark" displayName="bubblegum (dark)">./config/colors/bubblegum-dark.xml</include>
        <include name="bubblegum-light" displayName="bubblegum (light)">./config/colors/bubblegum-light.xml</include>
        <include name="cocoa-dark" displayName="cocoa (dark)">./config/colors/cocoa-dark.xml</include>
        <include name="cocoa-light" displayName="cocoa (light)">./config/colors/cocoa-light.xml</include>
        <include name="slate-dark" displayName="slate (dark)">./config/colors/slate-dark.xml</include>
        <include name="slate-light" displayName="slate (light)">./config/colors/slate-light.xml</include>
        <include name="snes-dark" displayName="Snes Scheme (dark)">./config/colors/snes-dark.xml</include>
        <include name="snes-light" displayName="Snes Scheme (light)">./config/colors/snes-light.xml</include>
        <include name="gb-dark" displayName="Game Boy Scheme (dark)">./config/colors/gameboy-dark.xml</include>
        <include name="gb-light" displayName="Game Boy Scheme (light)">./config/colors/gameboy-light.xml</include>
        <include name="pikachu-dark" displayName="Pikachu Edition (dark)">./config/colors/pikachu-edition-dark.xml
        </include>
        <include name="pikachu-light" displayName="Pikachu Edition (light)">./config/colors/pikachu-edition-light.xml
        </include>
        <include name="redBerries-dark" displayName="Red Berries (dark)">./config/colors/red-berries-dark.xml</include>
        <include name="redBerries-light" displayName="Red Berries (light)">./config/colors/red-berries-light.xml
        </include>
    </subset>

    <include>./config/variables.xml</include>

    <subset name="FontSize" displayName="Font Size">
        <include name="small">./config/variables/font-size-small.xml</include>
        <include name="medium">./config/variables/font-size-medium.xml</include>
        <include name="large">./config/variables/font-size-large.xml</include>
    </subset>

    <subset name="Ratio" displayName="Screen ratio">
        <include name="ratio32" displayName="3:2">./config/variables/view-system-32.xml</include>
        <include name="ratio43" displayName="4:3">./config/variables/view-system-43.xml</include>
        <include name="ratio53" displayName="5:3">./config/variables/view-system-53.xml</include>
    </subset>

    <subset name="Grid Game Image" displayName="Grid Game Image" appliesTo="grid">
        <include name="gridscreenshot" displayName="Screenshot">./config/variables/grid-image-screenshot.xml</include>
        <include name="gridthumbnail" displayName="Thumbnail">./config/variables/grid-image-thumbnail.xml</include>
        <include name="gridMarquee" displayName="Marquee">./config/variables/grid-image-marquee.xml</include>
    </subset>

    <subset name="VideoSnapshot" displayName="Video Snapshot" appliesTo="video, elementflix">
        <include name="videoScreenshot" displayName="Screenshot">./config/variables/video-snapshot-screenshot.xml
        </include>
        <include name="videoThumbnail" displayName="Thumbnail">./config/variables/video-snapshot-thumbnail.xml</include>
        <include name="videoMarquee" displayName="Marquee">./config/variables/video-snapshot-marquee.xml</include>
    </subset>

    <subset name="BoxArtStyle" displayName="Box art style" appliesTo="elementflix">
        <include name="cover" displayName="Cover">./config/variables/box-style-cover.xml</include>
        <include name="fit" displayName="Fit">./config/variables/box-style-fit.xml</include>
        <include name="stretch" displayName="Stretch (not recommended)">./config/variables/box-style-stretch.xml
        </include>
    </subset>

    <include>./config/display/view-general.xml</include>
    <include>./config/display/view-system.xml</include>
    <include>./config/display/view-menu.xml</include>

    <include>./config/display/view-basic.xml</include>
    <include>./config/display/view-detailed.xml</include>
    <include>./config/display/view-grid.xml</include>
    <include>./config/display/view-video.xml</include>
    <include>./config/display/view-boxes.xml</include>
    <include>./config/display/view-elementflix.xml</include>

    <subset name="PlayVideo" displayName="Video on carousel">
        <include name="true" displayName="Enabled">./config/variables/view-system-video.xml</include>
        <include name="false" displayName="Disabled"/>
    </subset>

    <subset name="Background Style" displayName="Background style">
        <include name="default" displayName="Default"/>
        <include name="random" displayName="Random">./config/variables/background-random.xml</include>
        <include name="custom" displayName="Custom">./config/variables/background-custom.xml</include>
    </subset>

    <subset name="Status Bar" displayName="Status Bar">
        <include name="complete" displayName="Clock + Battery"/>
        <include name="clock" displayName="Clock">./config/variables/status-bar-clock.xml</include>
        <include name="battery" displayName="Battery">./config/variables/status-bar-battery.xml</include>
        <include name="hidden" displayName="Hidden">./config/variables/status-bar-hidden.xml</include>
    </subset>

</theme>
