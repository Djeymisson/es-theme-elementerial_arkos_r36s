<!--
  Theme: Elementerial
  Author: mluizvitor
-->

<theme>
  <formatVersion>7</formatVersion>

  <variables>
    <fontRegular>./assets/fonts/Inter/Inter-Regular.otf</fontRegular>
    <fontBold>./assets/fonts/Inter/Inter-Bold.otf</fontBold>
    <fontLight>./assets/fonts/Inter/Inter-Light.otf</fontLight>
    <fontHelper>./assets/fonts/RobotoCondensed/RobotoCondensed-Regular.ttf</fontHelper>

    <percent.90>E6</percent.90>
    <percent.80>CC</percent.80>
    <percent.70>B3</percent.70>
    <percent.60>99</percent.60>
    <percent.50>80</percent.50>
    <percent.40>66</percent.40>
    <percent.30>4D</percent.30>
    <percent.20>33</percent.20>
    <percent.10>1A</percent.10>
    <percent.5>0D</percent.5>
  </variables>

  <subset name="Style" displayName="Style">
    <include name="dark" displayName="Dark" />
    <include name="light" displayName="Light" />
  </subset>

  <subset name="Color scheme" displayName="Color scheme">
    <include name="strawberry" displayName="strawberry">./settings/colors/strawberry.xml</include>
    <include name="orange" displayName="orange">./settings/colors/orange.xml</include>
    <include name="banana" displayName="banana">./settings/colors/banana.xml</include>
    <include name="lime" displayName="lime">./settings/colors/lime.xml</include>
    <include name="mint" displayName="mint">./settings/colors/mint.xml</include>
    <include name="blueberry" displayName="blueberry">./settings/colors/blueberry.xml</include>
    <include name="grape" displayName="grape">./settings/colors/grape.xml</include>
    <include name="bubblegun" displayName="bubblegun">./settings/colors/bubblegun.xml</include>
    <include name="cocoa" displayName="cocoa">./settings/colors/cocoa.xml</include>
    <include name="slate" displayName="slate">./settings/colors/slate.xml</include>
    <include name="snes" displayName="Snes Scheme">./settings/colors/extra-snes.xml</include>
    <include name="gb" displayName="Game Boy Scheme">./settings/colors/extra-gameboy.xml</include>
    <include name="pikachu" displayName="Pikachu Edition">./settings/colors/extra-pikachu-edition.xml</include>
    <include name="redFruits" displayName="Red Fruits">./settings/colors/extra-red-fruits.xml</include>
  </subset>

  <subset name="PlayVideo" displayName="Video on carousel">
    <include name="true" displayName="Enabled"/>
    <include name="false" displayName="Disabled"/>
  </subset>

  <subset name="Background Style" displayName="Background style">
    <include name="default" displayName="Default"/>
    <include name="custom" displayName="Custom">./settings/display/customBg.xml</include>
  </subset>

  <subset name="Status Bar" displayName="Status Bar">
    <include name="complete" displayName="Clock + Battery"/>
    <include name="clock" displayName="Clock"/>
    <include name="battery" displayName="Battery"/>
    <include name="hidden" displayName="Hidden"/>
  </subset>

  <subset name="Ratio" displayName="Screen ratio">
    <include name="ratio32" ifArch="rg351p,amberelec-rg351p" displayName="3:2"/>
    <include name="ratio43" ifArch="rg353p,rg351mp,rg351v,amberelec-rg353p,amberelec-rg351mp,amberelec-rg351v" displayName="4:3"/>
    <include name="ratio53" ifArch="rg552,amberelec-rg552" displayName="5:3"/>

    <include name="ratio32" ifNotArch="handheld,rg503,rg552,rg351p,rg353p,rg351mp,rg351v,amberelec-rg503,amberelec-rg552,amberelec-rg351p,amberelec-rg353p,amberelec-rg351mp,amberelec-rg351v" displayName="3:2"/>
    <include name="ratio43" ifNotArch="handheld,rg503,rg552,rg351p,rg353p,rg351mp,rg351v,amberelec-rg503,amberelec-rg552,amberelec-rg351p,amberelec-rg353p,amberelec-rg351mp,amberelec-rg351v" displayName="4:3"/>
    <include name="ratio53" ifNotArch="handheld,rg503,rg552,rg351p,rg353p,rg351mp,rg351v,amberelec-rg503,amberelec-rg552,amberelec-rg351p,amberelec-rg353p,amberelec-rg351mp,amberelec-rg351v" displayName="5:3"/>

    <!-- <include name="ratio32" displayName="3:2"/> -->
    <!-- <include name="ratio43" displayName="4:3"/> -->
    <!-- <include name="ratio53" displayName="5:3"/> -->
  </subset>

  <subset name="Grid Game Image" displayName="Grid Game Image" appliesTo="grid">
    <include name="gridscreenshot" displayName="Screenshot"/>
    <include name="gridthumbnail" displayName="Thumbnail"/>
    <include name="gridlogo" displayName="Logo"/>
  </subset>

  <include>./settings/colors/scheme.xml</include>
  <include>./settings/display/view-general.xml</include>
  <include>./settings/display/view-system.xml</include>
  <include>./settings/display/view-basic.xml</include>
  <include>./settings/display/view-detailed.xml</include>
  <include>./settings/display/view-grid.xml</include>
  <include>./settings/display/view-boxes.xml</include>
  <include>./settings/display/view-video.xml</include>
  <include>./settings/display/view-menu.xml</include>

</theme>
